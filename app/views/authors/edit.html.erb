
<% if @author.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Editing "<%= @author.title %>"</h2>
<%= form_tag post_path(@author), method: "patch" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.title %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <br />
    <%= text_area_tag "phone_number", @author.phone_number %>
  </div>
  <%= submit_tag "Update" %>
<% end %>
